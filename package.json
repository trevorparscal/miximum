{
	"name": "miximum",
	"version": "1.0.0",
	"description": "Mix your TypeScript code together with minimum explcit types",
	"type": "module",
	"main": "./dist/index.js",
	"module": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE"
	],
	"scripts": {
		"upgrade": "npx npm-check-updates -i --root",
		"build": "tsc -p tsconfig.build.json",
		"clean": "rm -rf dist",
		"prebuild": "npm run clean",
		"prepare": "npm run build",
		"prepublishOnly": "npm run build",
		"test": "find tests -type f -name \"*.test.ts\" -print0 | xargs -0 tsx --test",
		"test:ci": "find tests -type f -name \"*.test.ts\" -print0 | xargs -0 tsx --test --test-reporter=dot",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix"
	},
	"keywords": [
		"emitter",
		"events",
		"state",
		"state-management",
		"reactive",
		"context",
		"dependency-injection",
		"component",
		"composition",
		"typed",
		"typescript"
	],
	"author": "Trevor Parscal <trevor@parscal.com>",
	"license": "MIT",
	"devDependencies": {
		"@eslint/js": "^9.39.2",
		"@eslint/markdown": "^7.5.1",
		"@stylistic/eslint-plugin": "^5.7.0",
		"@types/eslint": "^9.6.1",
		"@types/node": "^25.0.9",
		"eslint": "^9.39.2",
		"globals": "^17.0.0",
		"tslib": "^2.8.1",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.0"
	}
}
